@model DnDWebApp_CC.Models.Entities.Equipment
@using DnDWebApp_CC.Models.Entities

@{
    ViewData["Title"] = "Details";
    var usedByCharacters = ViewData["usedByCharacters"] as List<EquipmentInCharacter>;
}

<h1>Details</h1>

<div>
    <h4>Equipment</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            Used by:
        </dt>
        <dd class = "col-sm-10">
            <ul>
                @foreach(var character in usedByCharacters)
                {
                    <li>@character.Character.Name</li>
                }
            </ul>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
